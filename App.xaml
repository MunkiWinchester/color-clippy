<Application
    x:Class="ColorClippy.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ImageSource x:Key="ClippyIcon">
                /ColorClippy;component/Resources/Images/main.ico
            </ImageSource>
            <ImageSource x:Key="ClippyIconPng">
                /ColorClippy;component/Resources/Images/main.png
            </ImageSource>
            <tb:TaskbarIcon
                x:Key="TaskbarIcon"
                IconSource="/Resources/Images/main.ico"
                PopupActivation="RightClick" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
